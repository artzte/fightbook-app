<header>
  <div class="row">
    <div class="large-9 columns">
      <h1 class="left h1-leaderhead">{{#link-to application}}incrossada{{/link-to}}</h1>
    </div>
  </div>
  <div class="row">
    <div class="columns large-12 small-12 page-title">
      <h2>{{title}}</h2>
    </div>
  </div>
</header>

<row class="content-row">
  <div class="thumbs-wrapper size-to-height">
    {{#each p in pagesSorted}}
    <div class="large-2 medium-3 small-4 columns" role='content'>
      <article class="page-thumbnail">
          {{#link-to 'page' key p.slug class='th'}}
            <img class="dt" {{bind-attr src=p.thumbUrl}}>
            <div class="caption">{{p.title}}</div>
          {{/link-to}}
      </article>
    </div>
    {{/each}}
  </div>
</row>
