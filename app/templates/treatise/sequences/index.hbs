<header>
  <div class="row">
    <div class="columns large-12 small-12 page-title">
      <h2>Sequences</h2>
    </div>
  </div>
</header>
{{#each sequence in content}}
  <div class="row sequence-index-row">
    <div class="columns small-3">
      {{page-image sizing-rect=settings.thumbSizingRect
          bounds-rect=sequence.sequenceItems.firstObject.section.osBounds
          section=sequence.sequenceItems.firstObject.section
          dziUrl=sequence.sequenceItems.firstObject.page.dziUrl}}
    </div>
    <div class="columns small-9">
      {{#link-to 'treatise.sequences.sequence' sequence.slug}}{{sequence.title}}{{/link-to}}
    </div>
  </div>
{{/each}}
