<header>
  <div class="row">
    <div class="columns large-12 small-12 page-title">
      <h2>Sequences</h2>
    </div>
  </div>
</header>
<div class="row" {{bind-attr style=view.sizingRectStyle}}>
  <div class="columns medium-12">
    <ul class="block-grid-4 thumbnail-array">
    {{#each sequence in content}}
      <li>
        {{#link-to 'treatise.sequences.sequence' sequence.slug class='th'}}
        <img {{bind-attr src=sequence.sequenceItems.firstObject.section.thumbSmall}}/>
        <p>{{sequence.title}}</p>
        {{/link-to}}
      </li>
    {{/each}}
    </ul>
  </div>
</div>
