<ul class="off-canvas-list">
  <li><label>Treatises</label></li>
  {{#each treatise in controllers.treatises}}
  <li>{{#link-to 'treatise' treatise}}{{treatise.title}}{{/link-to}}</li>
  {{/each}}
</ul>
{{#if treatise}}
  <ul class="off-canvas-list">
    <li><label>Sequences</label></li>
    {{#each sequence in treatise.sequences}}
    <li>{{#link-to 'treatise.sequences.sequence' treatise sequence.slug}}{{sequence.title}}{{/link-to}}</li>
    {{/each}}
  </ul>
  <ul class="off-canvas-list">
    <li><label>Folios</label></li>
    {{#each page in treatise.pagesSorted}}
    <li>{{#link-to 'page' page.slug}}{{page.title}}{{/link-to}}</li>
    {{/each}}
  </ul>
{{/if}}
