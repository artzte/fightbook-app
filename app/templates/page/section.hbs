<div id="section-content">
  <div class="translation">
    {{#if media.isMedium}}
    <h4>{{#link-to 'page' page}}{{page.title}}{{/link-to}} : {{sortOrder}}</h4>
    {{/if}}
    {{{formattedContent}}}

  </div>
  {{#if footnotes}}
  <div class="footnotes-wrapper">
    <ul class="no-bullet">
    {{#each footnote in footnotes}}
      <li>{{footnote.reference}}</sup> {{{footnote.content}}}</li>
    {{/each}}
    </ul>
  </div>
  {{/if}}
  <div class="sequences-wrapper">
    {{#unless settings.editMode}}{{#if sequenceItems}}
      <h5>Sequences</h5>
      <ul>
        {{#each sequenceItem in sequenceItems}}
        <li>
          {{#link-to 'sequences.show' sequenceItem.sequence.slug}}
            {{sequenceItem.title}} - {{sequenceItem.sequence.title}}
          {{/link-to}}
        </li>
        {{/each}}
      </ul>
    {{/if}}{{/unless}}
    {{#if media.isMedium}}{{#if settings.editMode}}
      <ul>
        <li>
          <a {{bind-attr href=adminEditLink}} target="_blank">Admin edit page</a>
        </li>
        {{#each sequence in page.treatise.sequences itemController='page/sectionSequences'}}
          <li class='checkbox-list-item'>
            <label>
              {{input type='checkbox' name='attached' checked=sequence.attached}}
              {{sequence.title}}
            </label>
            {{#if sequence.sequenceItem}}
              <form {{action 'saveItem' on='submit'}}>
                <div class="row">
                  <div class="columns small-10">
                    {{input value=sequence.sequenceItem.title placeholder='Title'}}
                  </div>
                  <div class="columns small-2">
                    <input type='submit' class="button tiny" value='Save'/>
                  </div>
                  <div class="columns small-12">
                    {{textarea value=sequence.sequenceItem.commentary.md placeholder='Commentary'}}
                  </div>
                </div>
              </form>
            {{/if}}
          </li>
        {{/each}}
      </ul>
      {{/if}}{{/if}}
  {{copyright-slug content=page.treatise.copyright.html}}
</div>
